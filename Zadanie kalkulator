liczba1 = float(input("Podaj pierwszą liczbę:"))
liczba2 = float(input("Podaj drugą liczbę:"))
operacja = input("Wybierz działanie (+,-,*,/)")

if operacja == "+":
    wynik = liczba1 + liczba2
    print("Wynik dodawania:", wynik)
    
elif operacja == "-":
    wynik = liczba1 - liczba2
    print("Wynik odejmowania:", wynik) 
    
elif operacja == "*":
    wynik = liczba1 * liczba2
    print("Wynik mnozenia:", wynik) 
    
elif  operacja == "/":
    if liczba2 != 0:
        wynik = liczba1 / liczba2
        print("Nie mozna dzielic przez zero:")
    else:
        print("Błąd: Nie mozna dzielić przez zero!")
else:
        print("Błąd: Nieprawidłowa operacja!")
